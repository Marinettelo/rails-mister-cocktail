

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Marie's cocktails</h1>
      <p>Best beverages for tired wagon baby developers</p>
      <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>

    <div class="row">
      <div class="col-sm-12 col-md-6">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <div class="card" >
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
            <div class="card-description">
              <h2><%=  %></h2>
            </div>

          </div>
        </div>
      <% end %>
    </div>
    </div>
</div>

